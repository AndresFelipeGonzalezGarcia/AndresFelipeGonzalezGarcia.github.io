---
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";

const EXPERIENCE = [
  {
    date: "2024 - Presente",
    title: "Estudiante de Ingeniería de Sistemas",
    company: "Universidad El Bosque",
    description:
      "Formación académica enfocada en bases de datos, programación orientada a objetos, estructuras de datos y desarrollo web.",
  },
  {
    date: "2025",
    title: "Proyecto Académico - Desarrollo Web",
    company: "Programación 2",
    description:
      "Diseño y desarrollo, junto a mi equipo de trabajo, de un aplicativo web enfocado en la traducción de idiomas.",
  },
  {
    date: "2026",
    title: "Proyecto Académico - Desarrollo Web",
    company: "Bases de datos 2",
    description:
      "Creación de un aplicativo web funcional que actúa como tracker de gimnasio, incorporando además un sistema de apuestas entre amigos para fomentar la práctica deportiva.",
  },
  {
    date: "2026",
    title: "Proyecto Académico - Desarrollo Web",
    company: "Ingeniería de Software",
    description:
      "Creación de un aplicativo web funcional relacionado con el Mundial de fútbol, que incluye información sobre partidos, ubicaciones y sistema de apuestas tipo ‘polla’.",
  },
];
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="experience">
  <div class="flex flex-col pt-8 max-w-4xl mx-auto">
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl dark:text-white text-blacktext" name="briefcase" />
      <Heading text="Experiencia" textGradient="Académica" level={2} />
    </div>

    <div class="relative mt-10" aria-label="Experiencia académica">
      <ol class="relative flex flex-col gap-6">
        {
          EXPERIENCE.map((experience) => (
            <li>
              <div class="rounded-2xl border border-neutral-100 dark:border-zinc-800 bg-white dark:bg-transparent p-6">
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <h3 class="text-lg font-black text-blacktext dark:text-white">
                      {experience.title}
                    </h3>
                    <p class="text-sm font-semibold text-mint-600 dark:text-mint-300">
                      {experience.company}
                    </p>
                  </div>

                  <span class="text-xs font-bold text-gray-500 dark:text-gray-300">
                    {experience.date}
                  </span>
                </div>

                <p class="mt-3 leading-7 font-semibold text-blacktext dark:text-gray-200">
                  {experience.description}
                </p>
              </div>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
